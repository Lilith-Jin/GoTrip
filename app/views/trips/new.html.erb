<h1>建立行程</h1>
<%= link_to "行程總覽", trips_path(@trips) %>


<%= form_for(@trip, url: 'trips_path') do |t| %>
  <div class="fields">
    <%= t.label :name, "行程名稱" %>
    <%= t.text_field :name %>
  </div>
  <div class="fields">
    <%= t.label :length, "天數" %>
    <%= t.number_field :length %>
  </div>

  <%= t.submit  %>
  
<% end %>
