<h1>行程總覽</h1>
<%= link_to "建立行程", mytrips_new_path %>

<% @trips.each do |trip| %>
    <p>行程名稱：<%= trip.name %></p>
    <p>天數：<%= trip.length %></p>
    <p>開始日期：<%= trip.start_date %></p>
    <p>結束日期：<%= trip.end_date %></p>
  <%= link_to "edit", mytrips_edit_path(trip) %>
  <%= link_to "delete", mytrips_delete_path(trip.id), method: "delete", data: { confirm: "確認刪除" } %>

<% end %>

