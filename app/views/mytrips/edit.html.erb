<h1>編輯行程</h1>
  <%= form_for(@trip, url: mytrips_update_path(@trip.id)) do |t| %>
  <div class="fields">
    <%= t.label :name, "行程名稱" %>
    <%= t.text_field :name %>
  </div>
  <div class="fields">
    <%= t.label :length, "天數" %>
    <%= t.number_field :length %>
  </div>
  <div>
  <%= t.label :start_date, "起始日期" %>
  <%= t.date_field :start_date, start_year: 1800, end_year: Time.now.year %>
  </div>

  <%= t.submit  %>
<% end %>
  <%= link_to "行程總覽", mytrips_path %>
