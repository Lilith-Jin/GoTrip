<%= render 'layouts/header_index' %>
<div class="users-container">
  <div class="users-wrap">
    
    <div class="register-page-title">
      <p>從今天開始，讓GoTrip成為</p>
      <h1>你旅程規劃的好夥伴</h1>
    </div>

    <div class="register-form">
      <h2 class="register-title">註冊GoTrip</h2>
      <div class="register-form-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="register-field">
          <%= f.text_field :name, placeholder: '姓名', class:'form-control form-control-sm' %>
        </div>
        
        <div class="register-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '郵件Email', class:'form-control form-control-sm' %>
        </div>

        <div class="register-field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: '密碼', class:'form-control form-control-sm' %>
        </div>

        <div class="register-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '重新輸入密碼', class:'form-control form-control-sm' %>
        </div>

        <div class="actions">
          <%= f.submit "立即加入" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="register-page-image-box">
    <img src="" alt="">
  </div>

</div>

<%= render 'layouts/footer' %>